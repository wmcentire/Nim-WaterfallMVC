                    <div class="row">
                        <label class="mb-4 fs-2" for="P2Name">Player 2 Name:</label><br />
                        <input class="space-s w-100" type="text" name="P2Name" placeholder="Player 2 Name" required />
                    </div>*@
                    <div class="row space-m"></div>
                    <div class="row d-flex justify-content-center">
                        <button class="w-50 pt-2 pb-2 rounded" type="button">Begin</button>
                    </div>
                    <div class="row space-m"></div>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>
</div>