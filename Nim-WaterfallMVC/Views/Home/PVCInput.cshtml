@{
    ViewData["Title"] = "Player vs. Computer Input Page";
}

<div class="parent container d-flex justify-content-center align-items-center h-100">
    <div class="row">
        <div class="row">
            <div class="btnContainer col-4">
                <a asp-controller="Home" asp-action="Index">
                    <img class="nimBtn" src="~/images/Nim-Button.png" width="50%" />
                </a>
                <a asp-controller="Home" asp-action="Index">
                    <h2 class="btnText">Go Back</h2>
                </a>
            </div>
            <div class="col-8"></div>
        </div>
        <div class="row">
            <div class="col"></div>
            <div class="col-8 d-flex justify-content-center">
                <form asp-controller="Home" asp-action="Game" method="post">
                    <div class="row">
                        <label class="mb-4 fs-2" for="P1Name">Player 1 Name:</label><br />
                        <input class="space-s w-100" type="text" name="P1Name" placeholder="Player 1 Name" required />
                    </div>
